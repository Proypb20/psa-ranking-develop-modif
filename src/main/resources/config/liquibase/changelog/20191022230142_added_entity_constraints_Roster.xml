<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    <!--
        Added the constraints for entity Roster.
    -->
    <changeSet id="20191022230142-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="category_id"
                                 baseTableName="roster"
                                 constraintName="fk_roster_category_id"
                                 referencedColumnNames="id"
                                 referencedTableName="category"/>

        <addForeignKeyConstraint baseColumnNames="team_id"
                                 baseTableName="roster"
                                 constraintName="fk_roster_team_id"
                                 referencedColumnNames="id"
                                 referencedTableName="team"/>

        <addForeignKeyConstraint baseColumnNames="tournament_id"
                                 baseTableName="roster"
                                 constraintName="fk_roster_tournament_id"
                                 referencedColumnNames="id"
                                 referencedTableName="tournament"/>

        <addForeignKeyConstraint baseColumnNames="event_id"
                                 baseTableName="roster"
                                 constraintName="fk_roster_event_id"
                                 referencedColumnNames="id"
                                 referencedTableName="event"/>

    </changeSet>
</databaseChangeLog>
